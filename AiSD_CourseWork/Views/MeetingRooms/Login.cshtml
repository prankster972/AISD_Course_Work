@model AiSD_CourseWork.Models.User

<h2>Login</h2>


<form asp-action="Login" asp-controller="MeetingRooms" asp-anti-forgery="true">
    <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Name">Enter login</label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Enter password</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger" />
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>